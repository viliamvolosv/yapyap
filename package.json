{
	"name": "yapyap",
	"version": "0.0.8",
	"description": "YapYap is a decentralized, peer-to-peer messenger node and CLI library built with Node.js + TypeScript. It prioritizes reliable end-to-end encrypted delivery, offline/store-and-forward support, deduplication, and ACK-driven reliability inside a small-footprint CLI package (no UI) so other applications can embed YapYap as a dependency or run it as an executable.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"yapyap": "dist/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./cli": "./dist/cli.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outdir=dist --sourcemap --packages=external",
		"build:cli": "esbuild src/cli/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/cli.js --sourcemap --packages=external --banner:js='#!/usr/bin/env node'",
		"build:all": "npm run build && npm run build:cli",
		"test": "tsx --test 'src/**/*.test.ts' 'tests/**/*.test.ts'",
		"test:integration:docker": "bash tests/integration/docker/run-basic-suite.sh",
		"test:integration:docker:scenario": "bash tests/integration/docker/run.sh",
		"test:integration:discovery": "bash tests/integration/docker/discovery-test.sh",
		"test:integration:message-forward": "bash tests/integration/docker/message-forward-test.sh",
		"test:integration:cross-network": "bash tests/integration/docker/cross-network-test.sh",
		"test:integration:all": "npm run test:integration:docker",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "biome check .",
		"typecheck": "tsc --noEmit",
		"dev": "tsx src/cli/index.ts"
	},
	"engines": {
		"node": ">=22.12.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/viliamvolosv/yapyap.git"
	},
	"bugs": {
		"url": "https://github.com/viliamvolosv/yapyap/issues"
	},
	"homepage": "https://github.com/viliamvolosv/yapyap#readme",
	"keywords": [
		"p2p",
		"messenger",
		"libp2p",
		"decentralized",
		"e2ee"
	],
	"sideEffects": false,
	"devDependencies": {
		"@biomejs/biome": "^2.3.15",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.2.3",
		"@types/ws": "^8.18.1",
		"esbuild": "^0.27.3",
		"tsx": "^4.19.2"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@chainsafe/libp2p-noise": "^17.0.0",
		"@chainsafe/libp2p-yamux": "^8.0.1",
		"@libp2p/autonat": "^3.0.10",
		"@libp2p/bootstrap": "^12.0.11",
		"@libp2p/circuit-relay-v2": "^4.1.3",
		"@libp2p/identify": "^4.0.10",
		"@libp2p/kad-dht": "^16.1.3",
		"@libp2p/peer-id-factory": "^4.2.4",
		"@libp2p/tcp": "^11.0.10",
		"@libp2p/webrtc": "^6.0.11",
		"@libp2p/websockets": "^10.1.3",
		"@multiformats/multiaddr": "^13.0.1",
		"better-sqlite3": "^12.6.2",
		"commander": "^14.0.3",
		"libp2p": "^3.1.3",
		"msgpackr": "^1.11.8",
		"node-datachannel": "^0.32.1",
		"pino": "^10.3.1",
		"pino-pretty": "^13.1.3",
		"ws": "^8.18.0"
	},
	"trustedDependencies": [
		"better-sqlite3",
		"node-datachannel"
	]
}
